{
  "manifest_version": 2,

  "name": "Hoax?",
  "description": "Upozorňuje na stránky s konšpiračným obsahom, podľa zoznamu Konspiratori.sk",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "css": ["styles.css"],
    "js": ["data.js", "main.js"]
  }]
}
